<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/save_select_off_btn_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/btn_playlist_select_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/save_all_select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/save_select_off_btn_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:text="전체선택"
        android:textSize="15sp"
        android:textColor="#6C6969"
        android:layout_marginTop="10dp"

        />
    <ImageView
        android:id="@+id/save_all_play_btn_iv"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:src="@drawable/icon_browse_arrow_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/save_all_select_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/save_all_listen_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/save_all_play_btn_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:text="전체듣기"
        android:textSize="15sp"
        android:textColor="#6C6969"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="편집"
        android:textSize="15sp"
        android:textColor="#6C6969"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/save_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/save_select_off_btn_iv"
        tools:listitem="@layout/item_save"
        />
</androidx.constraintlayout.widget.ConstraintLayout>