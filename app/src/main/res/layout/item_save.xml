<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_save_cv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/item_save_iv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:adjustViewBounds="true"
            android:src="@drawable/album_img_2"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/item_save_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빨간 맛 (Red Flavor)"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/item_save_cv"
        app:layout_constraintTop_toTopOf="@id/item_save_cv"
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/item_save_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="레드벨벳"
        android:textSize="15sp"
        android:textColor="#777474"
        app:layout_constraintStart_toEndOf="@id/item_save_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_save_cv"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="7dp"
        />
    <ImageView
        android:id="@+id/item_save_player_more_btn_iv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>
    <ImageView
        android:id="@+id/item_save_play_btn_iv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@drawable/nugu_btn_play_32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_save_player_more_btn_iv"
        />


</androidx.constraintlayout.widget.ConstraintLayout>