<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_savealbum_cv"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/item_savealbum_iv"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_album_exp2"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_savealbum_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범 제목"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_savealbum_cv"
        android:layout_marginTop="37dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/item_savealbum_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수이름"
        app:layout_constraintTop_toBottomOf="@id/item_savealbum_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_savealbum_cv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.03.25 | 정규 | 댄스 팝"
        app:layout_constraintTop_toBottomOf="@id/item_savealbum_singer_tv"
        app:layout_constraintStart_toEndOf="@id/item_savealbum_cv"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/nugu_btn_play_32"
        app:layout_constraintEnd_toStartOf="@id/item_savealbum_player_more_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/item_savealbum_player_more_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>