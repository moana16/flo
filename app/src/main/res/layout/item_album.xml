<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_album_cv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/item_album_iv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:src="@drawable/img_album_exp2"/>
        </androidx.cardview.widget.CardView>


        <ImageView
            android:id="@+id/item_album_music_start_btn_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/widget_black_play"

            app:layout_constraintEnd_toEndOf="@id/item_album_cv"
            app:layout_constraintBottom_toBottomOf="@id/item_album_cv"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/item_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LILACdfddfsdfsdfsdfsdfsdf"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_album_cv"/>
        <TextView
            android:id="@+id/item_album_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유(IU)"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_album_title_tv"
            android:layout_marginBottom="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>